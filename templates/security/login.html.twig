{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block content %}

<div class="o-content-modul" id="uvc_calculator">
    <div class="container">
        <div class="row  _justify-center">
            <div class="col col-12 col-sm-12 col-lg-8 col-xl-6">
                <div class="m-content-text  ">

<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h3 class="h3 mb-3 font-weight-normal" style="font-size: 18px;line-height: 24px;font-weight: bold;color: #FF6600; margin-bottom: 20px;">Please sign in</h3>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus style="margin: 10px 0 20px 0;">
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required style="margin: 10px 0 20px 0;">

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="a-button pull-right button no-bg button-action margin-left submit-btn" type="submit" style="margin-top: 20px;">
        Sign in
    </button>
</form>


            </div>
            </div>
            </div>
            </div>
            </div>
</section>
{% endblock %}
